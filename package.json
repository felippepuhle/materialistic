{
  "name": "materialistic",
  "version": "0.0.1",
  "author": "Felippe Rodrigo Puhle",
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "chroma-js": "^1.3.4",
    "prop-types": "^15.6.0",
    "react": "^16.1.0",
    "react-dom": "^16.1.0",
    "react-ink": "^6.2.0",
    "react-loadable": "^5.3.1",
    "react-router-dom": "^4.2.2",
    "styled-components": "^2.2.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.2",
    "babel-loader": "^7.0.0",
    "babel-plugin-styled-components": "^1.3.0",
    "babel-plugin-transform-react-jsx-source": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "clean-webpack-plugin": "^0.1.16",
    "dotenv-safe": "^4.0.4",
    "dotenv-webpack": "^1.5.4",
    "eslint": "^4.10.0",
    "eslint-plugin-flowtype": "^2.39.1",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-react": "^7.4.0",
    "flow-bin": "^0.59.0",
    "flow-typed": "^2.2.3",
    "html-webpack-plugin": "^2.30.1",
    "lint-staged": "^4.3.0",
    "pre-commit": "^1.2.2",
    "prettier": "^1.5.3",
    "react-hot-loader": "^3.1.1",
    "stylelint": "^8.2.0",
    "stylelint-config-standard": "^17.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.0.0",
    "url-loader": "^0.6.2",
    "webpack": "^3.5.6",
    "webpack-dev-server": "^2.7.1",
    "webpack-hot-middleware": "^2.20.0"
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "eslint --fix",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "scripts": {
    "build": "cp .env.prod .env && webpack -p --config webpack.prod.config.js --progress --profile --colors",
    "build:hml": "cp .env.dev .env && webpack -p --config webpack.prod.config.js --progress --profile --colors",
    "lint": "eslint --ext js src",
    "lint:css": "stylelint './src/**/*.js'",
    "lint:staged": "lint-staged",
    "prettier": "prettier --write --single-quote true --trailing-comma all --print-width 120",
    "start": "webpack-dev-server --config webpack.dev.config.js --progress --profile --colors",
    "start:source-map": "SOURCE_MAP=true webpack-dev-server --config webpack.dev.config.js --progress --profile --colors",
    "flow": "node_modules/.bin/flow check --all",
    "flow-log": "yarn flow --show-all-errors > flow.log",
    "flow-stop": "node_modules/.bin/flow stop",
    "flow-typed": "rm -rf flow-typed/npm && node_modules/.bin/flow-typed install"
  }
}
